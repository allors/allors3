@inherits ABSRadioGroupBase

<BSInputGroup @attributes="Attributes">
    @foreach (var option in Options)
    {
        <BSInputGroup IsCheck="true">
            <BSInputRadio Id="@OptionName(option)" CheckedValue="@option" @bind-Value="Model" />
            <BSLabel For="@OptionName(option)">@(DisplayOption(option))</BSLabel>
        </BSInputGroup>
    }
</BSInputGroup>
