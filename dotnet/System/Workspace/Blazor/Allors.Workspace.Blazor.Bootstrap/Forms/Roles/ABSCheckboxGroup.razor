@inherits ABSCheckboxGroupBase

<BSInputGroup @attributes="Attributes">

    @foreach (var option in Options)
    {
        <BSInputGroup IsCheck="true">
            <BSInputCheckbox Id="@OptionName(option)" Value="@IsSelected(option)" @onchange=@(v => OnChanged(v.Value, option)) />
            <BSLabel For="@OptionName(option)">@(DisplayOption(option))</BSLabel>
        </BSInputGroup>
    }
</BSInputGroup>
