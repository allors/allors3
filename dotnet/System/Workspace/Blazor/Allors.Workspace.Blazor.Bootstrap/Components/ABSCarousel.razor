@if (Items != null && Items.Count > 0)
{
    if (Items.Count == 1)
    {
        var item = Items[0];
        <img src="@item.Source" class="img-fluid" />
    }
    else
    {
        <BSCarousel NumberOfItems="@(Items.Count)" HasControls="@HasControls" HasIndicators="@HasIndicators" @attributes="Attributes">
            <div class="carousel-inner">
                @foreach (var item in Items)
                {
                    <BSCarouselItem src="@item.Source" alt="@item.Alt" loading="lazy" ActionLink="@item.ActionLink" ActionLinkTarget="@item.ActionLinkTarget">
                        <BSCarouselCaption CaptionText="@item.Caption" HeaderText="@item.Header" />
                    </BSCarouselItem>
                }
            </div>
        </BSCarousel>
    }
}

@code {
    [Parameter]
    public bool HasControls { get; set; }

    [Parameter]
    public bool HasIndicators { get; set; }

    [Parameter]
    public IList<CarouselItem> Items { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object> Attributes { get; set; }
}
