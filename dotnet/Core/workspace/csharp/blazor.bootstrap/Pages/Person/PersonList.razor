@page "/person/list"
@using Allors.Workspace.Meta
@using Allors.Workspace.Domain
@using Person = Allors.Workspace.Domain.Person
@attribute [Authorize]
@inject IWorkspace Workspace

@if (people != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in people)
            {
                <tr>
                    <td>@person.FirstName</td>
                    <td>@person.MiddleName</td>
                    <td>@person.LastName</td>
                    <td>@person.UserName</td>
                    <td><a href="/person/edit/@person.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    ISession Session;

    M M => this.Workspace.Context().M;

    Person[] people;

    protected override async System.Threading.Tasks.Task OnInitializedAsync()
    {
        this.Session = this.Workspace.CreateSession();

        var pull = new Pull
        {
            Extent = new Filter(M.Person),
        };

        var result = await Session.Pull(pull);

        this.people = result.GetCollection<Person>();
    }
}
