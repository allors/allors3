@inherits ABSStringInputBase

<BSInputGroup @attributes="Attributes">
    @if (ShowLabel)
    {
        <BSLabel>@Label</BSLabel>
    }

    <BSInput InputType="InputType" @bind-Value="StringModel"></BSInput>
    @if (!HideValidation)
    {
        <BSFeedback For="@(() => Model)" ValidMessage="@ValidMessage" />
    }

</BSInputGroup>
