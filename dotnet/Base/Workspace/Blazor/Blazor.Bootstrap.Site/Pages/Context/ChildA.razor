@page "/context/child-a"
@using Person = Allors.Workspace.Domain.Person
@using Allors.Workspace.Meta
@attribute [Authorize]

<h2>Child A Revision: @Revision</h2>

<BootstrapForm Model="@Person" TValue="Person">

    <BSRow>
        <BSCol>
            <BootstrapStringInputRole RoleType="@M.Person.FirstName" />
        </BSCol>
        <BSCol>
            <BootstrapStringInputRole RoleType="@M.Person.LastName" />
        </BSCol>
    </BSRow>

</BootstrapForm>

@code {
    [CascadingParameter]
    M M { get; set; }

    [CascadingParameter(Name = "Revision")]
    public long Revision { get; set; }

    [Parameter]
    public Person Person { get; set; }
}
